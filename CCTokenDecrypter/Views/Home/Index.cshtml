@{
    ViewData["Title"] = "Home Page";
}
@model FIleUploadUIModel

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="card w-75 m-auto">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-controller="Home" asp-action="UploadAndDecrypt" method="post">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="XlsFile"></label>
                    <div class="col-sm-10">
                        <input class="form-control-file" type="file" asp-for="XlsFile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"/>
                        <span class="text-danger" asp-validation-for="XlsFile"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="DecryptionKey"></label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" asp-for="DecryptionKey" />
                        <span class="text-danger" asp-validation-for="DecryptionKey"></span>
                    </div>
                </div>
                <button class="btn btn-outline-primary" type="submit">Upload and Decrypt</button>
            </form>
        </div>
    </div>
</div>